<h1>My tasks</h1>
<% @tasks.each do |t| %>
<div class="container">
  <%= link_to t.title, task_path(t) %>
  <% if t.completed===true %>
  <i class="far fa-check-square"></i>
  <% end %>
  <%= link_to "Delete", task_path(t),
      method: :delete,
      data: { confirm: "Are you sure?" }
  %>

  <% end %>
  <%= link_to "Add a new task", task_new_path %>
</div>

